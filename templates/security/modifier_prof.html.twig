{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="container">
        <div class="mt-5 rounded bg-light" style="padding: 50px">
            <h2> Modifier vos information de professeur:</h2>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAddr">Adresse de domicile</label>
                    {{ form_widget(form.inputAddr,{'attr': {'class': 'form-control', 'value':info.adresse}})}}
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPrice">Prix de séance (€/h)</label>
                    {{ form_widget(form.inputPrice,{'attr': {'class': 'form-control', 'value':info.prix}})}}
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
