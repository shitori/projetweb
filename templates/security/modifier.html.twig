{% extends 'base.html.twig' %}

{% block title %}EduCours - Modifier mon profil utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <div class="mt-5 rounded bg-light" style="padding: 50px">
            <h2> Modifier vos données utilisateur</h2>
            {{ form_start(form) }}
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label for="inputLastName">Nom de famille</label>
                    {{ form_widget(form.inputLastName,{'attr': {'class': 'form-control', 'value':info.nom}})}}
                </div>
                <div class="form-group col-md-6">
                    <label for="inputFirstName">Prénom</label>
                    {{ form_widget(form.inputFirstName,{'attr': {'class': 'form-control', 'value':info.prenom}})}}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputSexe">Sexe</label>
                    {{ form_widget(form.inputSexe,{'attr': {'class': 'form-control', 'value':info.sexe}})}}
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCity">Ville</label>
                    {{ form_widget(form.inputCity,{'attr': {'class': 'form-control','value':info.ville}})}}
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="inputPhone">Téléphone</label>
                    {{ form_widget(form.inputPhone,{'attr': {'class': 'form-control','value':info.phone}})}}
                </div>
                <div class="form-group col-md-6">
                    <label for="inputBd">Date de naissance</label>
                    {{ form_widget(form.inputBd,{'attr': {'class': 'form-control'}})}}
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
