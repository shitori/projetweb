{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-5 rounded bg-light" style="padding: 50px">
            <h2> Connecter vous : </h2>
            <form>
                <div class="form-group">
                    <label for="inputMail">Adresse mail</label>
                    <input type="email" class="form-control" id="inputMail" aria-describedby="emailHelp"
                           placeholder="Saisir votre mail">
                </div>
                <div class="form-group">
                    <label for="inputPass">Mot de passe</label>
                    <input type="password" class="form-control" id="inputPass" placeholder="Saisir votre mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}
